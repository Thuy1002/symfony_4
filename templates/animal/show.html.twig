{% extends 'base.html.twig' %}

{% block title %}Hello AnnimalController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">name</th>
            <th scope="col">color</th>
            <th scope="col">weight</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">{{ detail.id }}</th>
            <td>{{ detail.name }}</td>
            <td>{{ detail.color }}</td>
            <td>{{ detail.weight }}</td>
        </tr>
        </tbody>
    </table>




{% endblock %}
